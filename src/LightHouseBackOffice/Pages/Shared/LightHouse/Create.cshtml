@page
@model LightHouseBackOffice.Pages.Shared.LightHouse.CreateModel
@{
    ViewData["Title"] = "Create LightHouse";
}

<h1>Create LightHouse</h1>

@if (!String.IsNullOrEmpty(Model.SuccessMessage))
{
    <div class="alert alert-success">
        @Model.SuccessMessage
    </div>
}

@if (!String.IsNullOrEmpty(Model.ErrorMessage))
{
    <div class="alert alert-danger">
        @Model.ErrorMessage
    </div>
}

<div class="row">
    <div class="col-md-6">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>
            
            <div class="form-group mb-3">
                <label asp-for="LightHouseForm.Name" class="form-label"></label>
                <input asp-for="LightHouseForm.Name" class="form-control" />
                <span asp-validation-for="LightHouseForm.Name" class="text-danger"></span>
            </div>

            <div class="form-group mb-3">
                <label asp-for="LightHouseForm.CountryId" class="form-label"></label>
                <input asp-for="LightHouseForm.CountryId" class="form-control" type="number" />
                <br/><small class="form-text text-muted">Refer to the Countries list for valid Country IDs.(For TÃ¼rkiye use 49)</small>
                <span asp-validation-for="LightHouseForm.CountryId" class="text-danger"></span>
            </div>

            <div class="form-group mb-3">
                <label asp-for="LightHouseForm.Latitude" class="form-label"></label>
                <input asp-for="LightHouseForm.Latitude" class="form-control" type="number" step="0.000001" />
                <span asp-validation-for="LightHouseForm.Latitude" class="text-danger"></span>
                <small class="form-text text-muted">Must be between -90 and 90</small>
            </div>

            <div class="form-group mb-3">
                <label asp-for="LightHouseForm.Longitude" class="form-label"></label>
                <input asp-for="LightHouseForm.Longitude" class="form-control" type="number" step="0.000001" />
                <span asp-validation-for="LightHouseForm.Longitude" class="text-danger"></span>
                <small class="form-text text-muted">Must be between -180 and 180</small>
            </div>

            <div class="form-group mb-3">
                <input type="submit" value="Create" class="btn btn-primary" />
                <a asp-page="/Index" class="btn btn-secondary">Cancel</a>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}

